<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionBarStyle">@style/SFUGpaCalculatorAppBarStyle</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="SFUGpaCalculatorAppBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorColor">#C1A01E</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>

    <style name="Titles">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EditText">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ExplainMessage">
        <item name="android:paddingBottom">16dp</item>
    </style>
</resources>
